{
  "name": "@chzky/fp",
  "version": "0.7.4",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run -A --unstable main.ts",
    "watch": "deno run -A --unstable --watch main.ts",
    "test": "deno test  test/* test/*/* -A --unstable ",
    "coverage": "deno task test --coverage && deno coverage --html ",
    "build": "deno run -A ./script/esbuild.ts",
    "update": "deno run -A ./script/updateVersion.ts",
    "publish": "deno publish",
    "test:build": "deno task buikd && deno task test",
    "npm:publish": "cd ./dist && npm publish",
    "check:todo": "deno run  -A --unstable-sloppy-imports ./script/checkTodo.ts ",
    "build:FFI": "deno_bindgen -o binding"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "indentWidth": 2,
    "exclude": ["dist/"]
  },
  "lint": {
    "files": {
      "include": ["src/", "lib/"]
    },
    "rules": {
      "tags": [],
      "include": [
        "adjacent-overload-signatures",
        "ban-ts-comment",
        "ban-types",
        "constructor-super ",
        "default-param-last",
        "for-direction",
        "getter-return",
        "no-array-constructor",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-cond-assign",
        "no-async-promise-executor",
        "no-await-in-sync-fn",
        "no-case-declarations",
        "no-class-assign",
        "no-debugger",
        "no-delete-var",
        "no-dupe-args",
        "no-deprecated-deno-api",
        "no-dupe-class-members",
        "no-dupe-else-if",
        "no-duplicate-case",
        "no-empty",
        "no-empty-enum",
        "no-empty-interface",
        "no-empty-pattern",
        "no-ex-assign",
        "no-external-import"
      ]
    }
  },

  "unstable": ["bare-node-builtins", "sloppy-imports", "cron", "kv", "ffi"],
  "exclude": ["dist/", "node_modules/"],
  "compilerOptions": {},
  "imports": {
    "@/": "./src/",
    "@deno/dnt": "jsr:@deno/dnt@^0.41.1",
    "@std/": "https://deno.land/std@0.206.0/",
    "lib": "./lib/mod.ts",
    "colors": "jsr:@std/fmt@^0.218.2/colors",
    "dayjs": "npm:dayjs@1.11.9",
    "zod": "npm:zod@3.22.2"
  }
}
