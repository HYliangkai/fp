{
  "name": "@chzky/fp",
  "version": "0.8.7",
  "exports": "./mod.ts",
  "imports": {
    "@/": "./src/",
    "@chzky/fp": "./lib/mod.ts",
    "@std/": "https://deno.land/std@0.206.0/"
  },

  "tasks": {
    "dev": "deno run -A --unstable main.ts",
    "watch": "deno run -A --unstable --watch main.ts",
    "test": "deno test  test/* test/*/* -A --unstable ",
    "coverage": "deno task test --coverage && deno coverage --html ",
    "build": "deno run -A ./script/esbuild.ts",
    "update": "deno run -A ./script/updateVersion.ts",
    "publish": "deno publish",
    "test:build": "deno task buikd && deno task test",
    "npm:publish": "cd ./dist && npm publish",
    "check:todo": "deno run  -A --unstable-sloppy-imports ./script/checkTodo.ts ",
    "check:alltodo": "deno run  -A --unstable-sloppy-imports ./script/checkTodo.ts --all",
    "build:FFI": "deno_bindgen -o binding"
  },

  "lint": {
    "include": ["src/", "lib/"],

    "rules": {
      "tags": [],
      "include": [
        "adjacent-overload-signatures",
        "ban-ts-comment",
        "ban-types",
        "constructor-super ",
        "default-param-last",
        "for-direction",
        "getter-return",
        "no-array-constructor",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-cond-assign",
        "no-async-promise-executor",
        "no-await-in-sync-fn",
        "no-case-declarations",
        "no-class-assign",
        "no-debugger",
        "no-delete-var",
        "no-dupe-args",
        "no-deprecated-deno-api",
        "no-dupe-class-members",
        "no-dupe-else-if",
        "no-duplicate-case",
        "no-empty",
        "no-empty-enum",
        "no-empty-interface",
        "no-empty-pattern",
        "no-ex-assign",
        "no-extra-boolean-cast",
        "no-extra-non-null-assertion",
        "no-fallthrough",
        "no-func-assign",
        "no-global-assign",
        "no-import-assertions",
        "no-import-assign",
        "no-inferrable-types",
        "no-inner-declarations",
        "no-invalid-regexp",
        "no-irregular-whitespace",
        "no-new-symbol",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-obj-calls",
        "no-octal",
        "no-redeclare",
        "no-self-assign",
        "no-self-compare",
        "no-shadow-restricted-names",
        "no-sparse-arrays",
        "no-this-before-super",
        "no-undef",
        "no-unsafe-finally",
        "no-unsafe-negation",
        "no-var",
        "prefer-const",
        "require-yield",
        "use-isnan",
        "valid-typeof",
        "verbatim-module-syntax"
      ]
    }
  },

  "exclude": ["dist/", "node_modules/"]
}
